<% students.each do |student| %>
  <%= link_to("#", class: "list-group-item student-item", id: dom_id(student), remote: true, data: {student_id: student.id}) do content_tag(:span, class: "pull-right") do fa_icon("check-square-o") + fa_icon("square-o", class: "hidden") end +  content_tag(:b, student.roll_number) + " " + student.name end %>
<% end %>

<%= simple_form_for [@klass, @section, @new_attendance_registry], remote: true, html: {class: "hidden", id: "attendance_registry_form"} do |f| %>
  <%= f.input :absentee_ids %>
  <%= f.submit class: "submit" %>
<% end %>
